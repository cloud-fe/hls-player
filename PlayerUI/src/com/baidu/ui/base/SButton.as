package com.baidu.ui.base{		import flash.display.SimpleButton;	import flash.events.MouseEvent;		public class SButton extends SimpleButton  {				public static var BIGPLAY:String="bigplay";		public static var BIGPAUSE:String="bigpause";		public static var FULLSCREEN:String="fillscreen";		public static var MINISCREEN:String="miniscreen";		public static var SUBTITLE:String="subtitle";		public static var PAUSE:String="pause";		public static var PLAY:String="play";						private var callback:Function;				private var code:String;				public function SButton() {					}				public function hide():void{			visible=false;		}		public function show():void{			visible=true;		}				public function onMouseEvent(e:MouseEvent):void{			callback(code);		}						public function register(c:String,cb:Function):void{			code=c;			callback=cb;			addEventListener(MouseEvent.CLICK,onMouseEvent);		}	}	}