package com.baidu.ui.controls.subtitle {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import transitions.Tweener;		public class SubTitlePanelListBtn extends MovieClip {		public var index:int;		public function SubTitlePanelListBtn(i:int) {			index = i;			txtNum.text = (index+1).toString();			mcSelected.visible=index==0;			this.addEventListener(MouseEvent.CLICK,onMouseClickEvent);		}		public function setText(txt:String):void{			txtNum.text=txt;		}		public function selectBtn(bid:int):void {			mcSelected.visible = index == bid;			if (mcSelected.visible) {				mcSelected.alpha = 0;				mcSelected.scaleX = 0.8;				mcSelected.scaleY = 0.8;				Tweener.addTween(mcSelected,{alpha:1,scaleX:1,scaleY:1,time:0.3});			}		}		private function onMouseClickEvent(e:MouseEvent):void {			dispatchEvent(new Event(SubTitlePanel.PAGEBTN));		}	}}