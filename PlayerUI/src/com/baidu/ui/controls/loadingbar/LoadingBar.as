package com.baidu.ui.controls.loadingbar  {		import flash.display.MovieClip;	import transitions.Tweener;	import flash.utils.setTimeout;		public class LoadingBar extends MovieClip {		private var loading:MovieClip;		public function LoadingBar() {			loading = this;			loading.visible=false;		}		public function show():void{			loading.alpha = 1;			Tweener.addTween (loading,{alpha:1,time:0.6});			loopshow();			loading.visible=true;		}		public function hide():void{			Tweener.addTween (loading,{alpha:0,time:0.6,onComplete:stopshow});		}		private function loopshow():void{			mcLoadMc.rotation=0;			Tweener.addTween (mcLoadMc,{rotation:3600,time:20,onComplete:loopshow,transition:"linear"});		}		private function stopshow():void{			Tweener.removeTweens(mcLoadMc,['rotation']);			loading.visible=false;		}	}	}